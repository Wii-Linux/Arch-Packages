pkgname=wii-linux-meta
pkgver=1.0
pkgrel=3
pkgdesc="Metapackage that depends on all things Wii Linux related"
arch=('powerpc')
url="https://wii-linux.org"
license=(GPL-2.0-only)
install=$pkgname.install

package() {
	depends=(
		base
		wii-linux-kernel-stable
		wii-linux-keyring
		gumboot
		#configmii
		#helpmii
	)

}

